<canvas width="100%" height="100%">

	<include href="../lps/components/av/videotogglebutton.lzx"/>
	<include href="../lps/components/av/videoscreen.lzx"/>
	<include href="../lps/components/av/videoslider.lzx"/>
	<include href="../lps/components/av/videoplayer.lzx"/>
	<include href="../lps/components/av/videolibraryicon.lzx"/>
	<include href="../lps/components/av/videolibrarypopup.lzx"/>
	<include href="vodplayer.lzx"/>


	<dataset name="ds_videoList"
		src="http:youtube.jsp"
		/>


	<dataset name="ds_videoGetFlvUrl"
		src="http:youtube.jsp"
		/>


	<handler name="oninit"><![CDATA[
		var url = "rtmp://localhost/vc/terminator.flv";

		var param;
		if ((param = LzBrowser.getInitArg('empty')) && (param != "")) {
			// Start up empty.
		} else if ((param = LzBrowser.getInitArg('featured')) && (param != "")) {
			canvas.videosListFeatured();
		} else if ((param = LzBrowser.getInitArg('tag')) && (param != "")) {
			canvas.videosListByTag(param);
		} else if ((param = LzBrowser.getInitArg('user')) && (param != "")) {
			canvas.videosListByUser(param);
		} else {
			canvas.videosListByTag("guitar");
		}
	]]>
	</handler>


	<vodplayer id="vp" name="vp" width="${immediateparent.width}" height="${immediateparent.height}"/>


</canvas>

